[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=someuser
Group=somegroup
WorkingDirectory=/path/to/prepaid-mate
ExecStart=/path/to/prepaid-mate/prepaid-mate-venv/bin/gunicorn --bind unix:/tmp/prepaid_mate.sock --workers 1 -m 777 wsgi
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID

[Install]
WantedBy=multi-user.target
